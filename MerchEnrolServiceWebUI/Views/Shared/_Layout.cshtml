<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Merchant Enrollment Services</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/CustomValidation.js"></script>

    <script>
        $(function () {
            $("#Country").change(function () {
                var selectedVal = $(this).val();
                if ($("#DateAdded").val().toString() != "") {
                    isValidMerchant($(this).val(), $("#DateAdded").val());
                }
            });

            $("#DateAdded").change(function () {
                var dateAdded = $(this).val();
                var date_regex = /^(0[1-9]|1[0-2])\/(0[1-9]|1\d|2\d|3[01])\/(19|20)\d{2}$/;
                if (!(date_regex.test(dateAdded))) {
                    alert("Please enter date added in correct format (mm/dd/yyyy)");
                    $(this).val("");
                    return false;
                }
                isValidMerchant($("#Country").val(), dateAdded);
            });
        });
    </script>
</head>
<body style="background-color:lightcyan;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkturquoise; font-size:xx-large;">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Merchant details", "Index", "Merchant", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content" >
        @RenderBody()
       
        <footer>
            <div class="navbar navbar-inverse navbar-fixed-bottom" style="background-color:darkturquoise;">
                <div class="container">
                    <div class="navbar-header">
                        <p>&copy; @DateTime.Now.Year - Merchant Enrollment Services</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>