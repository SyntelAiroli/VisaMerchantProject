@model IEnumerable<MerchEnrolServiceWebUI.Models.Merchant>

@{
    ViewBag.Title = "Index";
}
<div style="font-family:Arial">
    <h2>Search merchant details</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <p>
        <hr />
        @using (Html.BeginForm("Index", "Merchant", FormMethod.Get))
        {
            <b>Search By:</b> @Html.RadioButton("searchBy", "Name", true) <text> Name</text>
            @Html.RadioButton("searchBy", "Country")<text> Country </text> <br>
            @Html.TextBox("search") <input type="submit" value="Search"  />
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Merchant Name")

            </th>
            <th>
                @Html.DisplayName("Added By")

            </th>
            <th>
                @Html.DisplayName("Country")
            </th>
            <th>
                @Html.DisplayName("Merchant Profit")
            </th>
            <th>
                @Html.DisplayName("Date Added")
            </th>
            <th>
                @Html.DisplayName("Number of Outlets")
            </th>
            <th></th>
        </tr>


        @if (Model.Count() == 0)
            {
            <tr>
                <td colspan="6">No rows match search criteria</td>
            </tr>
            }
            else
            {
                foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MerchantProfit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfOutlets)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
                }
            }

    </table>
</div>